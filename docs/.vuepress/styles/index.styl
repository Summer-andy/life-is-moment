$sidebarWidth = 14rem;

.theme-container {
  .sidebar {
    width: $sidebarWidth;
  }

  .page {
    padding-left: $sidebarWidth;
    padding-bottom: 0;
    margin: 2rem;

    .page-edit, .page-nav {
      max-width: 80%;
      padding: 2rem 0;
    }

    table {
      width: 100%; /*表格宽度*/
      display: inline-table;
      border: 1px solid #dedede; /*表格外边框设置*/
      border-collapse: collapse; /*使用单一线条的边框*/
      empty-cells: show; /*单元格无内容依旧绘制边框*/
    }
    table thead {
      width: 100%;
    }
    table th,
    table td {
      height: 45px; /*统一每一行的默认高度*/
      border: 1px solid #dedede; /*内部边框样式*/
      padding: 0 10px; /*内边距*/
    }
  }
}

.theme-default-content:not(.custom) {
  max-width: 80%;
  padding: 2rem 0;
}

